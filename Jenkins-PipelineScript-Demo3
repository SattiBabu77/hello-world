pipeline{
    agent any
    environment {
    
    PATH = "/opt/maven3/bin:$PATH"
    
    }
    stages {
        stage("Get the things from github") {
            steps {
                git 'https://github.com/SattiBabu77/hello-world.git'
                   }
                  } 
        stage("Maven Build") {
            steps {
                sh "mvn  clean package"
            }
        }
       
         
 }     
}
